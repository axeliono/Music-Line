<div class="cart-list">
    <div class="item-list">
        <div class="item-img" id="item-img">
            <img src={{image_path}} alt="">
        </div>
        <div class="item-name" id="item-name">
            {{name}}
        </div>
        <div class="item-group">
            <div class="item-text">Qty</div>
            <div class="quantity" id="quantity">2</div>
        </div>
        <div class="item-group">
            <div class="item-text">Price</div>
            <div class="price" id="price">${{price}}</div>
        </div>
        <div class="item-group">
            <div class="item-text">Total</div>
            <div class="total" id="total">$200.00</div>
        </div>
        <div class="remove" id="remove-cart">
            <i class="fas fa-trash-alt"></i>
        </div>
    </div>
</div>