                            </li>
                            <li class="nav-item">
                                <a href="/shop" class="nav-link">Shop All</a>
                            </li>
                            <li class="nav-item">
                                <!-- Toggle dropdown menu to shop by category -->
                                <div class="dropdown">
                                    <a href="#" class="nav-link dropbtn">Shop By Category <i class="fa fa-caret-down"></i></a>
                                    <div class="dropdown-content">
                                        <a href="/shop/category/1" id="category-click">Stringed Instruments</a>
                                        <a href="/shop/category/2" id="category-click">Free Reed Instruments</a>
                                        <a href="/shop/category/3" id="category-click">Reed Instruments</a>
                                        <a href="/shop/category/4" id="category-click">Brass Instruments</a>
                                        <a href="/shop/category/5" id="category-click">Fipple Flutes</a>
                                        <a href="/shop/category/6" id="category-click">Woodwinds</a>
                                        <a href="/shop/category/7" id="category-click">Percussion</a>
                                        <a href="/shop/category/8" id="category-click">Unpitched Percussion</a>
                                        <a href="/shop/category/9" id="category-click">Pitched Percussion</a>
                                    </div>
                                </div>
                            </li>
                            <li class="nav-item">
                                <a href="/contact" class="nav-link">Contact</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </header>
        </div>
    </div>
    
