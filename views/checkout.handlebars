<div class="container">
    <div class="forms-wrapper">
        <form id="checkout-form">
            <label for="card-number" class="">16 digit card number</label>
            <input type="number" name="card-number" id="card-number"> 

            <label for="expiration-number" class="">expiration date</label>
            <input type="number" name="expiration-number" id="card-expiration"> 

            <label for="cvc-number" class="">CVC</label>
            <input type="number" name="cvc-number" id="card-cvc"> 

            <label for="street-address" class="">Street Address</label>
            <input type="text" name="street-address" id="street-address">

            <label for="city">City</label>
            <input type="text" name="city" id="city">

            <label for="state">State</label>
            <input type="text" name="city" id="state">

            <label for="zip-code">Zip Code</label>
            <input type="number" name="zip-code" id="zip-code">

